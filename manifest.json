{
    "manifest_version": 3,
    "version": "0.1.0",
    "name": "Clean Copy",
    "description": "Clean Copy is a simple extension that removes all formatting from the selected text before copying it to the clipboard.",
    "icons": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "64": "data/icons/64.png"
    },
    "permissions": [
      "contextMenus",
      "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "worker.js"
    },
    "commands": {
      "copy_plain_text": {
        "suggested_key": {
          "default": "Ctrl+Shift+C",
          "mac": "Command+Shift+C"
        },
        "description": "Copy selected text as plain text"
      }
    },
    "action": {
      "default_icon": {
        "16": "data/icons/16.png",
        "32": "data/icons/32.png",
        "64": "data/icons/64.png"
      },
      "default_title": "Clean Copy"
    }
  }
  