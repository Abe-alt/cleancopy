{
    "manifest_version": 3,
    "version": "0.1.0",
    "name": "Clean Copy",
    "description": "Clean Copy is a simple extension that removes all formatting from the selected text before copying it to the clipboard.",
    "icons": {
      "16": "data/icons/16.ico",
      "32": "data/icons/32.ico",
      "64": "data/icons/64.ico"
    },
    "permissions": [
        "contextMenus", 
        "scripting"],
    "host_permissions": ["<all_urls>"],

    "background": {
        "service_worker": "worker.js"
      }
  }
  